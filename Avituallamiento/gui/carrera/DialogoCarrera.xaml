<Window x:Class="Avituallamiento.gui.carrera.DialogoCarrera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DialogoCarrera" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="DataGridCarreras" ItemsSource="{Binding Path=listaCarrera}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="171" Width="272" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Path=Nombre}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="buttonAniadir" Content="Añadir" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top" Width="92" Click="buttonAniadir_Click"/>
        <Button x:Name="buttonAvituallamiento" Content="Avituallamiento" HorizontalAlignment="Left" Margin="10,226,0,0" VerticalAlignment="Top" Width="92" Click="buttonAvituallamiento_Click"/>
        <Button x:Name="buttonModificar" Content="Modificar" HorizontalAlignment="Left" Margin="190,226,0,0" VerticalAlignment="Top" Width="92" Click="buttonModificar_Click"/>
        <Button x:Name="buttonEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="190,201,0,0" VerticalAlignment="Top" Width="92" Click="buttonEliminar_Click"/>

    </Grid>
</Window>
