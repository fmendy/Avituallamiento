<Window x:Class="Avituallamiento.gui.persona.DialogoPersona"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DialogoPersona" Height="300" Width="300">
    <Grid Margin="2,0,-2,0">
        <DataGrid x:Name="DataGridPersonas" ItemsSource="{Binding Path=listaPersonas}" Margin="29,10,0,0" VerticalAlignment="Top" Height="184" HorizontalAlignment="Left" Width="230" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding Path=Nombre}"/>
                <DataGridTextColumn Header="TELEFONO" Binding="{Binding Path=Telefono}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="jButtonNuevo" Content="Nuevo" HorizontalAlignment="Left" Margin="29,214,0,0" VerticalAlignment="Top" Width="75" Click="jButtonNuevo_Click"/>
        <Button x:Name="jButtonCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="184,239,0,0" VerticalAlignment="Top" Width="75" Click="jButtonCancelar_Click"/>
        <Button x:Name="jButtonModificar" Content="Modificar" HorizontalAlignment="Left" Margin="29,239,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button x:Name="buttonEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="184,214,0,0" VerticalAlignment="Top" Width="75" Click="buttonEliminar_Click"/>

    </Grid>
</Window>
